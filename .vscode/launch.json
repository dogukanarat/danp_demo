{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Zephyr Debug",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/zephyr/zephyr.elf",
            "device": "STM32L4xx",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32l4x.cfg"
            ],
            "openOCDPreConfigLaunchCommands": [
                "reset_config srst_only srst_nogate connect_assert_srst"
            ],
            "showDevDebugOutput": "parsed",
            "runToEntryPoint": "main",
            "preLaunchTask": "west: build",
            "svdFile": "",
            "armToolchainPath": "",
            "openOCDLaunchCommands": [
                // "hla_serial 066DFF555349898667241427"
                "hla_serial 0669FF555349898667212127"
            ],
        }
    ]
}
