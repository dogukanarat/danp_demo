{
    // Zephyr build and flash tasks for VS Code
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Zephyr: Build",
            "type": "shell",
            "command": "west build -b nucleo_l476rg",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Zephyr: Flash",
            "type": "shell",
            "command": "west flash",
            "group": "build",
            "dependsOn": ["Zephyr: Build"],
            "problemMatcher": []
        },
        {
            "label": "Zephyr: Clean",
            "type": "shell",
            "command": "west build -t clean",
            "group": "none",
            "problemMatcher": []
        }
    ]
}